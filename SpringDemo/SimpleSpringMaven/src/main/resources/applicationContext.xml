<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<bean class="win.chenliwei.spring.simple.bean.HelloWorld" id="HelloWorld">
	<property name="message" value="It is a whole new Hello World using IOC and DI of Spring"></property>
</bean>

<bean class="win.chenliwei.spring.simple.bean.HelloWorld2" id="HelloWorld2">
	<constructor-arg name="msg"  value="Hello World generated by constructor"></constructor-arg>
</bean>


<bean class="win.chenliwei.spring.simple.bean.HelloWorld" id="HelloWorld3">
	<constructor-arg name="message"  value="Hello World generated by constructor"></constructor-arg>
</bean>

<bean class="win.chenliwei.spring.simple.bean.Employee" id="Moore">
	<property name="firstName" value="Senior"></property>
	<property name="lastName" value="Moore"></property>
	<property name="homeAddress" ref="MooreAddress"></property>
</bean>

<bean class="win.chenliwei.spring.simple.bean.Address" id="MooreAddress">
	<constructor-arg name="line1" value="151 Corner Street"></constructor-arg>
	<constructor-arg name="line2" value=""></constructor-arg>
	<constructor-arg name="city" value="Albany"></constructor-arg>
	<constructor-arg name="state" value="NY"></constructor-arg>
	<constructor-arg name="zipCode" value="999999"></constructor-arg>
	<constructor-arg name="country" value="US"></constructor-arg>
</bean>
</beans>

